<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/userseparer">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/gameboy"
                android:id="@+id/fperfil"
                />
           <LinearLayout
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:id="@+id/trnick"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="NOMBRE"
                   android:textAlignment="center"
                   android:textColor="@color/white" />

               <TextView
                   android:id="@+id/trango"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:gravity="center"
                   android:text="RANGO"
                   android:textColor="@color/white" />

           </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tpuntos"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="PUNTOS"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:gravity="center"

            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvictoria"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="VICTORIAS"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:gravity="center"

            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tempates"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="EMPATES"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:gravity="center"

            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tderrotas"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="DERROTAS"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>