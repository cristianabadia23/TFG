<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo1"
    tools:context=".ui.offline.SelectorActivity">

    <Button
        android:id="@+id/boffline"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="211dp"
        android:drawableLeft="@drawable/nosignal"
        android:text="Jugar sin conexion"
        android:textColor="#1CD4EC"
        android:textSize="24sp"
        app:backgroundTint="#000000" />

    <Button
        android:id="@+id/bonline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="161dp"
        android:drawableLeft="@drawable/g5"
        android:text="jugar online"
        android:textColor="#2DF306"
        android:textSize="30sp"
        app:backgroundTint="#000000"
        app:iconTint="#FFFFFF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="552dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="TRES EN RAYA"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="234dp"
        android:layout_height="198dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="309dp"
        app:srcCompat="@drawable/locator" />

</RelativeLayout>